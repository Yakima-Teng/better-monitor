{
  "include": [
    "build/**/*.mts",
    "src/**/*.mts",
    "test/**/*.mts",
    "types/**/*.d.ts",
    "./*.mts"
  ],
  "exclude": ["node_modules", "dist", "localhost"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/better-monitor/tsconfig.app.tsbuildinfo",
    "noEmit": true, // Optional - see note below
    "target": "esnext",
    "module": "nodenext",
    "strict": true,
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "typeRoots": ["types", "node_modules/@types"]
  }
}
