{
  "name": "better-monitor",
  "homepage": "https://www.verybugs.com",
  "version": "0.0.48",
  "description": "JS SDK used to report data to server for better website monitoring",
  "type": "module",
  "types": "types",
  "main": "dist/better-monitor.common.js",
  "module": "dist/better-monitor.esm.js",
  "unpkg": "dist/better-monitor.js",
  "jsdelivr": "dist/better-monitor.min.js",
  "imports": {
    "#build/*": "./build/*.mts",
    "#test/*": "./test/*.mts",
    "#api/*": "./src/api/*.mts",
    "#plugin/*": "./src/plugin/*.mts",
    "#scripts/*": "./src/scripts/*.mts",
    "#src/*": "./src/*.mts",
    "#root/*": "./*.mts"
  },
  "files": [
    "dist/better-monitor.common.js",
    "dist/better-monitor.esm.js",
    "dist/better-monitor.min.js",
    "types",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Yakima-Teng/better-monitor.git"
  },
  "scripts": {
    "ready": "npm install",
    "predev": "rimraf dist",
    "dev": "rollup --config rollup.config.mjs --watch",
    "prebuild": "rimraf dist",
    "build:int": "cross-env NODE_ENV=production MODE=int node --run build",
    "build:pre": "cross-env NODE_ENV=production MODE=pre node --run build",
    "build:production": "cross-env NODE_ENV=production MODE=production node --run build",
    "build": "rollup --config rollup.config.mjs",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prettier": "npx prettier --write ./src ./test ./build ./*.mts ./*.mjs",
    "eslint": "eslint --fix src/**/* test/**/* build/**/*",
    "tsc": "tsc --noEmit --project ./tsconfig.json",
    "lint": "npm run prettier && npm run eslint && npm run test && npm run tsc",
    "buildAndDeploy:int": "cross-env NODE_ENV=production MODE=int node --run buildAndDeploy",
    "buildAndDeploy:pre": "cross-env NODE_ENV=production MODE=pre node --run buildAndDeploy",
    "buildAndDeploy:production": "cross-env NODE_ENV=production MODE=production node --run buildAndDeploy",
    "buildAndDeploy": "node --run build && node ./build/deploy.mts"
  },
  "browser": {
    "stream": "stream-browserify"
  },
  "keywords": [
    "bug report",
    "js bug",
    "monitor",
    "frontend monitor",
    "better monitor",
    "website monitoring"
  ],
  "author": "yakima.public@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-typescript": "7.27.1",
    "@eslint/js": "9.19.0",
    "@jest/globals": "30.0.5",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-replace": "6.0.2",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.4",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/gulp": "4.0.17",
    "@types/lodash": "4.17.20",
    "@types/node": "22.17.2",
    "@types/object-inspect": "1.13.0",
    "babel-jest": "30.2.0",
    "cross-env": "10.0.0",
    "dayjs": "1.11.13",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.0.1",
    "glob": "11.0.3",
    "globals": "15.14.0",
    "gulp": "5.0.1",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "jiti": "2.6.1",
    "npm-run-all": "4.1.5",
    "nsuite": "0.0.57",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "rollup": "4.46.2",
    "rollup-plugin-bundle-size": "1.0.3",
    "rollup-plugin-license": "3.6.0",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.38.0"
  },
  "dependencies": {
    "axios": "1.11.0",
    "lodash": "4.17.21",
    "object-inspect": "1.13.4",
    "stream-browserify": "3.0.0"
  }
}
