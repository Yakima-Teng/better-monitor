{
  "name": "better-monitor",
  "homepage": "https://www.verybugs.com",
  "version": "0.0.49",
  "description": "JS SDK used to report data to server for better website monitoring",
  "type": "module",
  "types": "types",
  "main": "dist/better-monitor.common.js",
  "module": "dist/better-monitor.esm.js",
  "unpkg": "dist/better-monitor.js",
  "jsdelivr": "dist/better-monitor.min.js",
  "imports": {
    "#build/*": "./build/*.mts",
    "#test/*": "./test/*.mts",
    "#api/*": "./src/api/*.mts",
    "#plugin/*": "./src/plugin/*.mts",
    "#scripts/*": "./src/scripts/*.mts",
    "#src/*": "./src/*.mts",
    "#root/*": "./*.mts"
  },
  "files": [
    "dist/better-monitor.common.js",
    "dist/better-monitor.esm.js",
    "dist/better-monitor.min.js",
    "types",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Yakima-Teng/better-monitor.git"
  },
  "scripts": {
    "ready": "npm install",
    "prettier": "npx prettier --write ./src ./test ./build ./types ./scripts ./*.mts ./*.ts",
    "eslint": "eslint --fix src/**/* test/**/* build/**/*",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.ts",
    "type:check": "tsc --noEmit --project ./tsconfig.json",
    "lint": "npm run prettier && npm run eslint && npm run test && npm run type:check",
    "dev": "cross-env NODE_ENV=development MODE=production webpack-dev-server --config ./scripts/webpack.dev.cjs",
    "build": "npm run lint && cross-env NODE_ENV=production MODE=production webpack --config ./scripts/webpack.prod.cjs",
    "debug": "npm run lint && cross-env NODE_ENV=production MODE=production webpack --config ./scripts/webpack.debug.cjs",
    "prepare": "husky install",
    "release": "standard-version",
    "release-major": "standard-version --release-as major",
    "release-minor": "standard-version --release-as minor",
    "release-patch": "standard-version --release-as patch",
    "deploy": "cross-env NODE_ENV=production MODE=production node ./build/deploy.mts",
    "buildAndDeploy": "node --run build && node --run deploy"
  },
  "browser": {
    "stream": "stream-browserify"
  },
  "keywords": [
    "bug report",
    "js bug",
    "monitor",
    "frontend monitor",
    "better monitor",
    "website monitoring"
  ],
  "author": "yakima.public@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/plugin-transform-runtime": "7.28.3",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-typescript": "7.27.1",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.19.0",
    "@jest/globals": "30.0.5",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/gulp": "4.0.17",
    "@types/lodash": "4.17.20",
    "@types/node": "22.17.2",
    "@types/object-inspect": "1.13.0",
    "babel-jest": "30.2.0",
    "cross-env": "10.0.0",
    "dayjs": "1.11.13",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.0.1",
    "glob": "11.0.3",
    "globals": "15.14.0",
    "gulp": "5.0.1",
    "html-webpack-inject-attributes-plugin": "1.0.6",
    "html-webpack-plugin": "5.6.4",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "jiti": "2.6.1",
    "npm-run-all": "4.1.5",
    "nsuite": "0.0.57",
    "prettier": "3.6.2",
    "rimraf": "6.0.1",
    "standard-version": "9.5.0",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "tsconfig-paths-webpack-plugin": "4.2.0",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.38.0",
    "webpack": "5.102.1",
    "webpack-bundle-analyzer": "4.10.2",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2",
    "webpack-merge": "6.0.1",
    "webpackbar": "7.0.0"
  },
  "dependencies": {
    "axios": "1.11.0",
    "lodash": "4.17.21",
    "object-inspect": "1.13.4",
    "stream-browserify": "3.0.0"
  }
}
